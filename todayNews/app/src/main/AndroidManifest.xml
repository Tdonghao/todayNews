<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ly.todayNews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">

        <activity android:name=".splashActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".ViewActivity"
            android:label="@string/news_name"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".WebViewActivity"
            android:label="@string/view_name"
            android:parentActivityName=".ViewActivity">
        </activity>

        <activity android:name=".YsActivity"
            android:label="@string/ys_name"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".PlayViewActivity"
            android:label="@string/ys_play"
            android:parentActivityName=".YsActivity">
        </activity>


    </application>

</manifest>